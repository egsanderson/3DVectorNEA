<!DOCTYPE html>
<html>
    <head>
        <title>Create an Account</title>
        <link rel="stylesheet" href="../public/css/style.css">
        <script src="../public/js/main.js"></script>
        <link rel="icon" type="image/x-icon" href="../public/images/favicon.png">
        <meta charset="UTF-8">
    </head>
    <body>
      <nav id="mainNav">
        <ul>
            <li><a href="#" id="createAccountButton">Create An Account</a></li>
            <li><a href="#" id="loginButton">Login</a></li>
        </ul>
        <div></div>
      </nav>
        <div id="registration-container">
          <form id="registration-form" action="/add" method="POST">
            <fieldset>
              <h3>Create a [/- accountType /] account</h3> 
              [/ if (errorMessage) { /]
                <p style="color: red;">[/- errorMessage /]</p>
              [/ } /]
              <input type="hidden" name="account_type" value="[/- accountType /]">
              <label>First Name</label>
              <input type="text" id="forename" name="forename" required>
              <br><br>
              <label>Surname</label>
              <input type="text" id="surname" name="surname" required>
              <br><br>
              <label>Email</label>
              <input type="text" id="email" name="email" required>
              <br><br>
              <label>Password</label>
              <input type="password" id="password" name="password" required>
              <br><br>
              <label>Confirm Password</label>
              <input type="password" id="confirmPassword" name="confirmPassword" required>
              <br><br>
              <button type="reset">Reset</button>
              <button type="submit">Submit</button>
            </fieldset>
          </form>
        </div>
      </body>
</html>
